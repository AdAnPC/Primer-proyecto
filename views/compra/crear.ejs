<main class="panel-producto">

<% if (typeof success !== 'undefined' && success) { %>
  <div class="alert alert-success"><%= success %></div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>

  <form action="/compra/crear" method="POST" class="form-container">
    <h1>compras</h1>

    <div class="form-group">
      <label for="FechaCompra" class="form-label">Fecha de Compra</label>
      <input type="date" class="form-control" id="FechaCompra" name="FechaCompra" required>
    </div>

    <div class="form-group">
      <label for="ProveedorID" class="form-label">Proveedor</label>
      <select class="form-select" id="ProveedorID" name="ProveedorID" required>
        <option value="">Seleccionar...</option>
        <% proveedores.forEach(p => { %>
          <option value="<%= p.ProveedorID %>"><%= p.Nombre %></option>
        <% }); %>
      </select>
    </div>

    <div class="form-group">
      <label for="ProductoID" class="form-label">Producto</label>
      <select class="form-select" id="ProductoID" name="ProductoID" required>
        <option value="">Seleccionar...</option>
        <% productos.forEach(p => { %>
          <option value="<%= p.ProductoID %>"><%= p.Nombre %></option>
        <% }); %>
      </select>
    </div>

    <div class="form-group">
      <label for="CantidadComprada" >Cantidad</label>
      <input type="number" class="form-control" id="CantidadComprada" name="CantidadComprada" required>
    </div>

    <div class="form-group">
      <label for="PrecioCompra">Precio Unitario</label>
      <input type="number" step="0.01" class="form-control" id="PrecioCompra" name="PrecioCompra" required>
    </div>

    <button type="submit" class="btn btn-primary">Registrar Compra</button>
  </form>
</div>

</main>