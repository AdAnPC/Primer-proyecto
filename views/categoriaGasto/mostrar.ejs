<div class="container mt-4">
  <h2 class="mb-4">📁 Categorías de Gasto</h2>
  <table class="table table-striped table-hover shadow">
    <thead class="table-dark">
      <tr>
        <th>#</th>
        <th>Nombre</th>
        <th>Descripción</th>
      </tr>
    </thead>
    <tbody>
      <% categorias.forEach((cat, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= cat.Nombre %></td>
          <td><%= cat.Descripcion || '-' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
