<main class="panel-producto">


  <form action="/movimientoInventario/crear" method="POST" class="form-container">
    <h2>  MOVER INVENTARIO </h2>
    <div class="form-group">
      <label for="FechaMovimiento" class="form-label">Fecha</label>
      <input type="date" class="form-control" name="FechaMovimiento" id="FechaMovimiento" required>
    </div>

    <div class="form-group">
      <label for="ProductoID" class="form-label">Producto</label>
      <select name="ProductoID" class="form-select" required>
        <option value="">Seleccionar...</option>
        <% productos.forEach(p => { %>
          <option value="<%= p.ProductoID %>"><%= p.Nombre %></option>
        <% }) %>
      </select>
    </div>

    <div class="form-group">
      <label for="CantidadMovida" class="form-label">Cantidad Movida</label>
      <input type="number" class="form-control" name="CantidadMovida" id="CantidadMovida" required>
    </div>

    <div class="form-group">
      <label for="TipoMovimiento" class="form-label">Tipo de Movimiento</label>
      <select name="TipoMovimiento" class="form-select" required>
        <option value="">Seleccionar...</option>
        <option value="Entrada">Entrada</option>
        <option value="Salida">Salida</option>
      </select>
    </div>

    <div class="form-group">
      <label for="BodegaID" class="form-label">Bodega</label>
      <select name="BodegaID" class="form-select" required>
        <option value="">Seleccionar...</option>
        <% bodegas.forEach(b => { %>
          <option value="<%= b.BodegaID %>"><%= b.Nombre %></option>
        <% }) %>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Registrar Movimiento</button>
  </form>
</div>


</main>